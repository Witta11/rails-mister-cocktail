<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1558383409-ab7ef8db3e01?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1670&q=80);">
  <div class="container">
    <h1><strong>This is a virtual Cocktail Bar</strong></h1>
    <p>Create your own little pleasures.</p>
    <div class="btn btn-outline-secondary">
      <%= link_to 'Start now', new_cocktail_path %>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="cards">
    <% @cocktails.each do |cocktail|%>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1551538827-9c037cb4f32a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2761&q=80)">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
    <% end %>
    </div>
  </div>
  <div class="btn btn-outline-dark">
    <%= link_to 'Add a Cocktail', new_cocktail_path %>
  </div>
</div>
